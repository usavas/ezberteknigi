<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:colorForeground">#FFFFFF</item>-->


        <item name="android:fontFamily">@font/actor</item>
        <item name="android:windowBackground">@color/lightGrey</item>
        <item name="android:colorSecondary">@color/sunshine</item>
        <item name="android:colorButtonNormal">@color/flamingo</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:buttonCornerRadius">4dp</item>
    </style>

    <style name="SunshineTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/sunshine</item>
        <item name="colorPrimaryDark">@color/sunshine2</item>
        <item name="colorAccent">@color/vermillon</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.WordRevisionPager">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
