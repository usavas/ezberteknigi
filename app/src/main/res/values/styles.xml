<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/indigoPrimaryDark</item>
        <item name="colorPrimaryDark">@color/indigoPrimaryDark</item>
        <item name="colorAccent">@color/indigoAccent</item>

        <item name="android:windowBackground">@color/lightGrey</item>
        <item name="android:colorForeground">#FFFFFF</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="colorButtonNormal">@color/indigoPrimary</item>
        <!--<item name="android:colorSecondary">@color/amberPrimaryDark</item>-->

        <!--<item name="colorControlNormal">@color/black</item>-->
        <!--<item name="colorControlActivated">@color/black</item>-->

        <item name="android:fontFamily">@font/actor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:buttonCornerRadius">4dp</item>

    </style>


    <style name="SunshineTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/sunshine</item>
        <item name="colorPrimaryDark">@color/sunshine2</item>
        <item name="colorAccent">@color/vermillon</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
