<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_word_revision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        android:elevation="8dp"
        android:minHeight="300dp"
        app:cardBackgroundColor="@color/sunshine">

        <RelativeLayout
            android:id="@+id/main_item"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvItemWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                android:padding="20dp"
                android:textColor="@color/white"
                android:text="TextView"
                android:textSize="30sp" />

            <RelativeLayout
                android:id="@+id/sub_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/tvItemWord"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sub_item_translation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="translation" />

                <TextView
                    android:id="@+id/sub_item_example_sentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:padding="@dimen/textViewPadding"
                    android:layout_below="@+id/sub_item_translation"
                    android:text="example sentence" />

                <Button
                    android:id="@+id/button_sub_item_item_learn_mastered"

                    android:background="@color/sunshine2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="70dp"
                    android:padding="@dimen/textViewPadding"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:text="GÖZDEN GEÇİRDİM"
                    android:layout_below="@+id/sub_item_example_sentence"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

