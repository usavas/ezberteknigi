<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MaterialComponents.CardView"
    android:id="@+id/book_card_view"
    android:layout_marginTop="@dimen/recylcer_view_margin_top"
    android:layout_marginStart="@dimen/recylcer_view_margin_start"
    android:layout_marginEnd="@dimen/recylcer_view_margin_end"
    android:layout_marginBottom="@dimen/recycler_view_margin_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="show_book_detail"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/book_main_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            android:id="@+id/image_book_detail"
            android:transitionName="show_book_detail"
            android:background="@color/lightGrey"
            android:src="@drawable/ic_book_black_24dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="author"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_book_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="genre"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_book_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="level"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

