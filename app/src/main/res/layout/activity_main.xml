<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <Button
        android:id="@+id/button_reading_texts"
        android:layout_width="@dimen/moduleButton"
        android:layout_height="@dimen/moduleButton"
        android:layout_marginStart="@dimen/moduleMarginLeft"
        android:layout_marginTop="@dimen/moduleMarginTop"
        android:text="@string/readingTexts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_words"
        android:layout_width="@dimen/moduleButton"
        android:layout_height="@dimen/moduleButton"
        android:layout_marginStart="@dimen/moduleMarginLeft"
        android:layout_marginTop="@dimen/moduleMarginTop"
        android:text="@string/words"
        app:layout_constraintStart_toEndOf="@+id/button_reading_texts"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_add_sample_reading_text"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ADD SAMPLE READING"
        app:layout_constraintEnd_toEndOf="@+id/button_words"
        app:layout_constraintStart_toStartOf="@+id/button_reading_texts"
        app:layout_constraintTop_toBottomOf="@+id/button_reading_texts" />

</android.support.constraint.ConstraintLayout>