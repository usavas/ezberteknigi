<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">


    <RelativeLayout
        android:id="@+id/main_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:padding="20dp"
            android:text="TextView"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/sub_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@id/tvItemWord"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sub_item_translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/textViewMargin"
                android:layout_marginStart="@dimen/textViewMargin"
                android:layout_marginEnd="@dimen/textViewMargin"

                android:padding="@dimen/textViewPadding"
                android:text="translation" />

            <TextView
                android:id="@+id/sub_item_example_sentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/textViewMargin"
                android:layout_marginStart="@dimen/textViewMargin"
                android:layout_marginEnd="@dimen/textViewMargin"
                android:padding="@dimen/textViewPadding"
                android:layout_below="@+id/sub_item_translation"
                android:text="example sentence" />
            
            <Button
                android:id="@+id/button_sub_item_item_learn_mastered"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/textViewMargin"
                android:layout_marginStart="@dimen/textViewMargin"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="@dimen/textViewMargin"
                android:padding="@dimen/textViewPadding"
                android:text="MARK AS MASTERED/LEARNING"
                android:layout_below="@+id/sub_item_example_sentence"
                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>