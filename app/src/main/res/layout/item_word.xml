<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_gravity="center_vertical">


    <RelativeLayout
        android:id="@+id/main_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:padding="20dp"
            android:text="TextView"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/sub_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/tvItemWord"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sub_item_translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/textViewMargin"
                android:layout_marginStart="@dimen/textViewMargin"
                android:layout_marginEnd="@dimen/textViewMargin"

                android:padding="@dimen/textViewPadding"
                android:text="translation" />

            <TextView
                android:id="@+id/sub_item_example_sentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/textViewMargin"
                android:layout_marginStart="@dimen/textViewMargin"
                android:layout_marginEnd="@dimen/textViewMargin"
                android:padding="@dimen/textViewPadding"
                android:layout_below="@+id/sub_item_translation"
                android:text="example sentence" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>